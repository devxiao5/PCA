@model IEnumerable<PCA.Models.WorkItem>
@{
    ViewBag.Title = "Index";
}
@section css {

}
@section sideNavDailyReport
{
    sideNavItemSelected
}

<a href="/DailyReport" class="btn btn-default">Back</a>
<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading"><h4>Current Daily Report</h4></div>
    <div class="panel-body">
        <b>
            Report Date:
        </b>
        <p>@ViewBag.currentReportDate</p>
        <b>
            Report Summary:
        </b>
        <p>@ViewBag.currentReportSummary</p>


    </div>
</div>


<hr />
<a href="/DailyReport/CreateWork/@ViewBag.currentReportId" class="btn btn-success">Create Work Performed Items</a>
<br /><br />

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Work Performed</h4>
    </div>
    <div class="panel-body">
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>Contractor</th>
                    <th>Summary</th>
                    <th>Performance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var work in Model)
            {
                    <tr>
                        <td>@work.ContractorId</td>
                        <td>@work.Summary</td>
                        <td>@work.Performance</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="...">
                                <a href="/DailyReport/Detail/@work.WorkItemId" type="button" class="btn btn-default"><span class="glyphicon glyphicon-info-sign"></span></a>
                                <a href="/DailyReport/Edit/@work.WorkItemId" type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="/DailyReport/Delete/@work.WorkItemId" type="button" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

