<!-- Daily Report Index-->
<!-- Imports / Dependencies -->
@model IEnumerable<PCA.ViewModels.DailyReportViewModel>
@{
    ViewBag.Title = "Index";
}
@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.bundle.min.js"></script>
    <script src="~/Scripts/DataTablesCustomization.js"></script>
    <script src="~/Scripts/DailyReport.js"></script>
}

<div class="col-xs-12 col-md-12">
    <!-- Daily Report Container -->
    <div class="panel panel-default col-xs-12">
        <!-- Daily Report Header -->
        <div class="panel-heading col-xs-12">
            <div class="headingElements col-xs-12">
                <div class="col-xs-4 headingLeft">
                    <a href="/DailyReport/Select" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-menu-left"></span> Back
                    </a>
                </div>
                <span class="headingText col-xs-4">DAILY REPORTS</span>
                <div class="headingRight col-xs-4">
                    <a href="/DailyReport/Create" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-plus"></span> New</a>
                </div>
            </div>
        </div>

        <!-- Daily Report Body -->
        <div class="panel-body col-xs-12">

            <!-- Filters -->
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <div class="text-center">
                        <h5>
                            <b>Project</b>
                        </h5> @{ var proj = ViewBag.currentProject; } @{ if (proj == 0)
                                { @Html.Raw("All") }
                                    else { @Html.Raw(@ViewBag.currentProject) }  }

                        
                    </div>
                </div>

                <div class="col-xs-6">
                    <div class="text-center">
                        <h5><b>Status</b></h5> @ViewBag.currentStatus
                    </div>
                </div>

                <div class="col-xs-12">
                    <hr />
                </div>
            </div>


            <!-- Link Buttons -->
            <div id="LinkButtonGroup" class="col-xs-12" role="group" aria-label="...">
                <a id="LinkButton1" href="" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-road"></span> Work</a>
                <a id="LinkButton2" href="" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                <a id="LinkButton3" href="" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                <a id="LinkButton4" href="" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-picture"></span> Pictures</a>
                <a id="LinkButton5" href="" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-sort"></span> Workflow</a>
            </div>

            <!-- Daily Report DataTables -->
            <div id="TableWrapper" class="col-xs-12">
                <table id="Sort1" class="display col-xs-12 Sort1 table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Project</th>
                            <th>Summary</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Daily Reports -->
                        @foreach (var report in Model)
                        {
                            <tr id="@report.DateString" class="LinkButton dailyReportRow" data-status="@report.Status" data-link-button-1="/DailyReport/Detail/@report.DailyReportId" data-link-button-2="/DailyReport/Edit/@report.DailyReportId"
                                data-link-button-3="/DailyReport/Delete/@report.DailyReportId" data-link-button-4="/DailyReport/PictureIndex/@report.DailyReportId"
                                data-link-button-5="/DailyReport/WorkFlow/@report.DailyReportId"
                                data-date="@report.DateString">
                                <td>@report.DateString</td>
                                <td>@report.Name</td>
                                <td>@report.Summary</td>
                                <td>@report.Status</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                        <a id="LinkButton1" href="/DailyReport/Detail/@report.DailyReportId" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-road"></span></a>
                                        <a id="LinkButton2" href="/DailyReport/Edit/@report.DailyReportId" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                                        <a id="LinkButton3" href="/DailyReport/Delete/@report.DailyReportId" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                                        <a id="LinkButton5" href="/DailyReport/WorkFlow/@report.DailyReportId" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-sort"></span></a>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
